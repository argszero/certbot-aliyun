# Alibaba Cloud credentials
ALIBABA_CLOUD_ACCESS_KEY_ID=your_access_key_id
ALIBABA_CLOUD_ACCESS_KEY_SECRET=your_access_key_secret
ALIBABA_CLOUD_REGION_ID=cn-beijing

# Certificate configuration
CERT_DOMAINS=example.com,*.example.com
CERT_EMAIL=admin@example.com
CERT_STAGING=true  # Set to true for testing with Let's Encrypt staging
CERT_VALIDATION_METHOD=manual  # manual, dns-route53, alidns, or standalone

# SLB configuration
SLB_INSTANCE_ID=alb-xxxxxx
SLB_LISTENER_ID=lsr-xxxxxx  # Required: specific listener ID for certificate deployment (find in ALB console)
SLB_LISTENER_PROTOCOL=https

# Paths
CERT_STORAGE_PATH=./certs
CERTBOT_CONFIG_DIR=./certbot-config